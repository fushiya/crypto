<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
</head>
<body>
    <input type="checkbox"> Decrypt<br>
    <input type="number">
    <button onclick="crypt()">START</button> <br>
    <textarea name="text" id="text" cols="130" rows="20">{{file}}</textarea>
<script>
    const crypt = () => {
        let txt = document.querySelector('#text').value;
        let polar = document.querySelector('input[type="checkbox"]');
        let key = +document.querySelector('input[type="number"]').value;
        if (polar.checked) {
            key = -key;
        }
        let out = ``;
        let alphabet = ['а', 'б', 'в', 'г', 'ґ', 'д', 'е', 'є', 'ж', 'з', 'и', 'і', 'ї', 'й', 'к', 'л', 'м',
                        'н', 'о', 'п', 'р', 'с', 'т', 'у', 'ф', 'х', 'ц', 'ч', 'ш', 'щ', 'ь', 'ю', 'я',
                        'А','Б','В','Г','Ґ','Д','Е','Є','Ж','З','И','І','Ї','Й','К','Л','М','Н','О',
                        'П','Р','С','Т','У','Ф','Х','Ц','Ч','Ш','Щ','Ь','Ю','Я', '1', '2', '3',
                        '4', '5', '6', '7', '8', '9', '0', ' ', ',', '.', '+', '-', ':', '\n'];

        for (let i=0; i<txt.length; i++) {
            if (alphabet.includes(txt[i])) {
                out+=`${alphabet[(alphabet.indexOf(txt[i]) + key) % alphabet.length]}`;
            } else {
                out+=`${txt[i]}`;
            }
        }
        document.querySelector('#text').value = out;
        delete out;
        delete alphabet;
        delete key;
        delete polar;
    }
</script>
</body>
</html>